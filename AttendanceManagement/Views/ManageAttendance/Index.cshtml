<body id="page-top">
    @using (Html.BeginForm("Index", "ManageAttendance"))
    {
        @Html.AntiForgeryToken()

        <div class="container text-center my-auto">
            <hr />
            <br>
            <br>
            <br>
            <div class="row">
                <div class="col-lg-12 mx-auto">
                    <h1 class="text-uppercase">
                        <strong style="color: white">Manage Attendance</strong>
                    </h1>
                </div>
            </div>
            <br>
            <br>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="col-lg-4 mx-auto text-center">
                @Html.LabelFor(model => model.Department_DID, "Branch", htmlAttributes: new { @class = "form-group" })
                <div class="col-md-10">

                    @Html.DropDownList("Department_DID", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.Department_DID, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-lg-4 mx-auto text-center">

                @Html.LabelFor(model => model.Sem, "Semester", htmlAttributes: new { @class = "form-group" })
                <div class="col-md-10">
                    @Html.DropDownList("Sem", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.Sem, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="col-lg-4 mx-auto text-center">

                @Html.LabelFor(model => model.Section, "Section", htmlAttributes: new { @class = "form-group" })
                <div class="col-md-10">
                    @Html.DropDownList("Section", null, htmlAttributes: new { @class = "custom-select" })
                    @Html.ValidationMessageFor(model => model.Section, "", new { @class = "text-danger" })

                </div>
            </div>


            <div class="col-lg-4 mx-auto text-center">

                @Html.Label("Slot", htmlAttributes: new { @class = "form-group" })
                <div class="col-md-10">

                    @Html.DropDownList("Slot", new List<SelectListItem>
            {
            new SelectListItem { Text = "S1", Value = "S1", Selected = true},
            new SelectListItem { Text = "S2", Value = "S2" },
            new SelectListItem { Text = "S3", Value = "S3" },
            new SelectListItem { Text = "S4", Value = "S4" },
            new SelectListItem { Text = "S5", Value = "S5" },
            new SelectListItem { Text = "S6", Value = "S6" },
            new SelectListItem { Text = "S7", Value = "S7" },
            new SelectListItem { Text = "L1", Value = "L1" },
            new SelectListItem { Text = "L2", Value = "L2" },
            }, new { @class = "custom-select" })


                    @Html.ValidationMessageFor(model => model.Slot, "", new { @class = "text-danger" })
                </div>


            </div>
            <div class="col-lg-4 mx-auto text-center">

                @Html.Label("Date", htmlAttributes: new { @class = "form-group" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.Date, new { @class = "form-control datepicker", placeholder = "Select DATE" })
                    @Html.ValidationMessageFor(model => model.Date)
                </div>


            </div>

        </div>


        <br>
        <div class="col-lg-4 mx-auto text-center">
            <div class="col-lg-4 mx-auto text-center">
                <input type="submit" value="Get Students" class="btn btn-default" />
            </div>
        </div>



